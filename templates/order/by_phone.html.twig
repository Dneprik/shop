{% extends 'base.html.twig' %}

{% block title %}Orders by phone{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Find orders by phone</h1>

        <form method="get" action="{{ path('order_by_phone') }}" class="mb-3">
            <div class="input-group">
                <input type="text" name="phone" value="{{ phone }}" placeholder="+386..." class="form-control" />
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>

        <a href="{{ path('show_orders') }}" class="btn btn-secondary mb-3">Show All Orders</a>

        {% if phone and not orders %}
            <div class="alert alert-info text-center">
                <h4>No orders for {{ phone }}</h4>
                <p><a href="{{ path('order_new') }}" class="btn btn-primary">Create New Order</a></p>
            </div>
        {% elseif orders|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                    <tr>
                        <th>Number</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Created</th>
                        <th>Items Count</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for o in orders %}
                        <tr>
                            <td>{{ o.orderNumber }}</td>
                            <td>{{ o.customer.phone }}</td>
                            <td><span class="badge bg-{{ o.status == 'PAID' ? 'success' : 'secondary' }}">{{ o.status }}</span></td>
                            <td>{{ o.totalPrice }}</td>
                            <td>{{ o.createdAt|date('Y-m-d H:i') }}</td>
                            <td>{{ o.items|length }}</td>
                            <td>
                                <a href="{{ path('show_order', {number: o.orderNumber}) }}" class="btn btn-sm btn-outline-primary">View</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endblock %}
