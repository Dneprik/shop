{% extends 'base.html.twig' %}

{% block title %}Order placed{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white text-center">
                        <h1 class="mb-0">Order Placed Successfully!</h1>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h5 class="text-muted">Order Details</h5>
                                <p class="mb-1"><strong>Number:</strong> {{ order.orderNumber }}</p>
                                <p class="mb-1"><strong>Status:</strong> <span class="badge bg-{{ order.status == 'PAID' ? 'success' : 'secondary' }}">{{ order.status }}</span></p>
                                <p class="mb-1"><strong>Total:</strong> ${{ order.totalPrice }}</p>
                                <p class="mb-0"><strong>Created:</strong> {{ order.createdAt|date('Y-m-d H:i:s') }}</p>
                            </div>
                        </div>

                        <h5 class="mb-3">Items</h5>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                <tr>
                                    <th>Type</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for item in order.items %}
                                    <tr>
                                        <td>
                                            {% if item.article %}
                                                <span class="badge bg-info">Article</span>
                                            {% elseif item.subscription %}
                                                <span class="badge bg-primary">Subscription</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if item.article %}{{ item.article.name }}{% endif %}
                                            {% if item.subscription %}{{ item.subscription.name }}{% endif %}
                                        </td>
                                        <td>${{ item.priceAtPurchase }}</td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="3" class="text-center text-muted">No items</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <div class="text-center mt-4">
                            <a href="{{ path('order_new') }}" class="btn btn-outline-primary btn-lg">
                                <i class="bi bi-plus-circle"></i> Place Another Order
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
